<!DOCTYPE html>
<html>
<head>
    <title>Company - View All</title>
</head>
<body>
    <h1>Companies</h1>
    <a href="/company/add">Add New Company</a> <br />
    <table border="1">
        <tr><th>Name</th><th>Actions</th></tr>
        <% for(var i=0; companies.length > i; i++ ) { %>
        <tr>
            <td>
                <a href="/company/?company_id=<%= companies[i].company_id %>">
                    <%= companies[i].company_name %>
                </a>
            </td>
            <td>
                <a href='/company/edit/?company_id=<%= companies[i].company_id %>'>
                    Edit
                </a>
            </td>
        </tr>
        <% } %>
    </table>
</body>
